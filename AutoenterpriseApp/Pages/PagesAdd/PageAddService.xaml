<Page x:Class="AutoenterpriseApp.Pages.PagesAdd.PageAddService"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoenterpriseApp.Pages.PagesAdd"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddService">
    <Grid>
        <TextBlock
            Text="Добавление обслуживающего персонала"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10"
            FontSize="20"/>

        <!--Начало тела-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="ФИО" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Padding="5"/>
                <TextBox Name="TbxFIO" Width="120" Height="25" MaxLength="24"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Бригада" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Padding="5"/>
                <ComboBox Name="CmbBrigadeChoise" Height="25" HorizontalContentAlignment="Center"/>
            </StackPanel>
            <Button Name="btnAddService" Click="buttonAddService" Width="125">
                <TextBlock Text="Добавить персонал" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
        <!--Конец тела-->

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <Button
                Content="Назад"
                Click="buttonBack"/>
        </StackPanel>
    </Grid>
</Page>
